<%= form_with model: @post do |f|%>
<p>
    <%= f.text_field :signin_name, placeholder: 'enter signin name' %>
    <% if @post.errors.messages[:signin_name].any? %>
        <span class="error"><%= @post.errors.messages[:signin_name][0] %></span>
    <% end %>
</p>
<p>
    <%= f.text_field :display_name, placeholder: 'enter display name'%>
    <% if @post.errors.messages[:display_name].any? %>
        <span class="error"><%= @post.errors.messages[:display_name][0] %></span>
    <% end %>
</p>
<p>
    <%= f.text_field :password, placeholder: 'enter password'%>
    <% if @post.errors.messages[:password].any? %>
        <span class="error"><%= @post.errors.messages[:password][0] %></span>
    <% end %>
</p>
<p>
    <%= f.text_field :password_confirmation, placeholder: 'enter password for confirmation'%>
    <% if @post.errors.messages[:password_confirmation].any? %>
        <span class="error"><%= @post.errors.messages[:password_confirmation][0] %></span>
    <% end %>
</p>
<p>
    <%= f.submit class 'btn btn-primary' %>
</p>
<% end %>

<p>
    <%= link_to t('cancel'),posts_path, class: 'btn btn-secondary' %>
</p>